# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# ==============================================

# Contraseña del usuario root de MySQL
# IMPORTANTE: Cambia esta contraseña por una segura
MYSQL_ROOT_PASSWORD=ospos_root_password_CAMBIAR

# Nombre de la base de datos para OSPOS
MYSQL_DATABASE=ospos

# Usuario de la base de datos para OSPOS
MYSQL_USER=ospos_user

# Contraseña del usuario de OSPOS
# IMPORTANTE: Cambia esta contraseña por una segura
MYSQL_PASSWORD=ospos_password_CAMBIAR

# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN OSPOS
# ==============================================

# Host de la base de datos (no cambiar si usas el compose)
DB_HOST=ospos-db

# Nombre de la base de datos (debe coincidir con MYSQL_DATABASE)
DB_NAME=ospos

# Usuario de la base de datos (debe coincidir con MYSQL_USER)
DB_USER=ospos_user

# Contraseña de la base de datos (debe coincidir con MYSQL_PASSWORD)
DB_PASSWORD=ospos_password_CAMBIAR

# Puerto de la base de datos
DB_PORT=3306

# ==============================================
# CONFIGURACIÓN REGIONAL
# ==============================================

# Zona horaria de la aplicación
# Ejemplos: America/Mexico_City, America/Bogota, Europe/Madrid
OSPOS_TIMEZONE=America/Mexico_City

# Idioma de la aplicación
# Opciones: spanish, english, french, etc.
OSPOS_LANGUAGE=spanish

# ==============================================
# SEGURIDAD
# ==============================================

# Clave de encriptación de 32 caracteres
# CRÍTICO: Genera una clave única y segura
# Puedes usar: openssl rand -base64 32
OSPOS_ENCRYPTION_KEY=tu-clave-de-32-caracteres-aqui

# ==============================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# ==============================================

# Protocolo de correo
OSPOS_MAIL_PROTOCOL=smtp

# Servidor SMTP
# Gmail: smtp.gmail.com
# Outlook: smtp-mail.outlook.com
OSPOS_MAIL_HOST=smtp.gmail.com

# Puerto SMTP
# Gmail TLS: 587
# Gmail SSL: 465
OSPOS_MAIL_PORT=587

# Usuario de correo electrónico
OSPOS_MAIL_USERNAME=tu-email@gmail.com

# Contraseña de aplicación (no la contraseña normal)
# Para Gmail: https://support.google.com/accounts/answer/185833
OSPOS_MAIL_PASSWORD=tu-password-de-aplicacion

# Tipo de encriptación
# Opciones: tls, ssl
OSPOS_MAIL_CRYPTO=tls

# ==============================================
# CONFIGURACIÓN DE DOMINIO (OPCIONAL)
# ==============================================

# Tu dominio personalizado para OSPOS
# Ejemplo: ospos.tuempresa.com
OSPOS_DOMAIN=ospos.tudominio.com