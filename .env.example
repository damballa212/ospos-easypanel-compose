# ==============================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# ==============================================

# Contraseña del usuario root de MySQL
# IMPORTANTE: Cambia esta contraseña por una segura
MYSQL_ROOT_PASSWORD=rootpassword_CAMBIAR_POR_SEGURIDAD

# Nombre de la base de datos para OSPOS
MYSQL_DB_NAME=ospos

# Usuario de la base de datos para OSPOS
MYSQL_USERNAME=admin

# Contraseña del usuario de OSPOS
# IMPORTANTE: Cambia esta contraseña por una segura
MYSQL_PASSWORD=pointofsale_CAMBIAR_POR_SEGURIDAD

# ==============================================
# CONFIGURACIÓN DE LA APLICACIÓN OSPOS
# ==============================================

# Entorno de la aplicación
# Opciones: production, development, testing
CI_ENVIRONMENT=production

# Forzar HTTPS
# Opciones: true, false
FORCE_HTTPS=false

# Zona horaria de PHP
# Ejemplos: America/Mexico_City, America/Bogota, Europe/Madrid, UTC
PHP_TIMEZONE=UTC

# ==============================================
# CONFIGURACIÓN REGIONAL (OPCIONAL)
# ==============================================

# Ejemplos de zonas horarias comunes:
# PHP_TIMEZONE=America/Mexico_City
# PHP_TIMEZONE=America/Bogota
# PHP_TIMEZONE=America/Lima
# PHP_TIMEZONE=America/Santiago
# PHP_TIMEZONE=Europe/Madrid
# PHP_TIMEZONE=Europe/London

# ==============================================
# CONFIGURACIÓN DE DESARROLLO (OPCIONAL)
# ==============================================

# Para entorno de desarrollo, descomenta:
# CI_ENVIRONMENT=development

# Para habilitar HTTPS (si tienes certificado SSL), descomenta:
# FORCE_HTTPS=true

# ==============================================
# NOTAS DE SEGURIDAD
# ==============================================

# 1. SIEMPRE cambia las contraseñas por defecto:
#    - MYSQL_ROOT_PASSWORD
#    - MYSQL_PASSWORD

# 2. Para generar contraseñas seguras, usa:
#    openssl rand -base64 32 | tr -d "=+/" | cut -c1-25

# 3. En producción:
#    - Usa CI_ENVIRONMENT=production
#    - Configura FORCE_HTTPS=true si tienes SSL
#    - Usa contraseñas de al menos 20 caracteres

# 4. Variables críticas que DEBES cambiar:
#    ✅ MYSQL_ROOT_PASSWORD
#    ✅ MYSQL_PASSWORD

# 5. Variables opcionales que puedes personalizar:
#    - PHP_TIMEZONE (según tu ubicación)
#    - FORCE_HTTPS (si tienes certificado SSL)
#    - CI_ENVIRONMENT (development para pruebas)

# ==============================================
# EJEMPLOS DE CONFIGURACIÓN POR PAÍS
# ==============================================

# México:
# PHP_TIMEZONE=America/Mexico_City

# Colombia:
# PHP_TIMEZONE=America/Bogota

# Perú:
# PHP_TIMEZONE=America/Lima

# Chile:
# PHP_TIMEZONE=America/Santiago

# Argentina:
# PHP_TIMEZONE=America/Argentina/Buenos_Aires

# España:
# PHP_TIMEZONE=Europe/Madrid

# Estados Unidos (Este):
# PHP_TIMEZONE=America/New_York

# Estados Unidos (Oeste):
# PHP_TIMEZONE=America/Los_Angeles